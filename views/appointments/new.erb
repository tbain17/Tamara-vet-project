<header>Create appointment</header>
<form method = "post" action = "/appointments">
  <ul>
    <ul>
      <label for="pet-name">Pet Name:</label>
        <select id = "pet-select" name="pet_id">
          <% for pet in @pets %>
          <option value="<%= pet.id %>"><%= pet.name %></option>
          <% end %>
        </select>
    </ul>
    <ul>
      <label for="room">Room:</label>
        <select id = "room-select" name="room_id">
          <% for room in @rooms %>
          <option value="<%= room.id %>"><%= room.name %></option>
          <% end %>
        </select>
    </ul>
    <ul>
      <label for="treatment">Treatment:</label>
        <select id = "treatment-select" name="treatment_id">
          <% for treatment in @treatments %>
          <option value="<%= treatment.id %>"><%= treatment.type %></option>
          <% end %>
        </select>
    </ul>
    <ul>
      <label for="time">Time:</label>
        <input id = "time" type="text" name="time"/>
    </ul>
  </ul>

  <input type="submit" value="Add appointment"/>
</form>
