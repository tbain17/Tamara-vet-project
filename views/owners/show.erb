<header>Owner</header>
<p>First Name: <%= @owner.first_name %></p>
<p>Last Name: <%= @owner.last_name %></p>
<p>Contact number: <%= @owner.phone_number %></p>
<p>Contact email: <%= @owner.email %></p>
<p>Pets: <% for pet in @owner.pets %></p>
  <p><a href="/pets/<%= pet.id %>"><%= pet.name %></a></p>
<% end %>
<p>Status: <%= @owner.status %></p>
<a href="/owners/<%= @owner.id %>/edit">Edit owner</a>
<form action="/owners/<%= @owner.id %>/delete" method="post">
    <input type="submit" value="Delete owner"/>
</form>
<% if @owner.status == 'registered' %>
<form action="/owners/<%= @owner.id %>/unregister" method="post">
    <input type="submit" value="Unregister owner"/>
</form>
<% end %>
<% if @owner.status == 'unregistered' %>
<form action="/owners/<%= @owner.id %>/reregister" method="post">
    <input type="submit" value="Reregister owner"/>
</form>
<% end %>
